@inherits Umbraco.Web.Mvc.UmbracoTemplatePage

@{
    var parent = CurrentPage.Parent;
}





<div class="list-group">
    @foreach (var item in parent.Children.Where("Visible"))
    {
        if (item.Id == CurrentPage.Id)
        {
            //This menu item is currently selected
            <a href="@item.Url" class="list-group-item active">@item.Name</a>
        }
        else
        {
            
            <a href="@item.Url" class="list-group-item"> @item.Name</a>
            
        }
    
    }
</div>
